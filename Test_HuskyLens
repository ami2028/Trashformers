from huskylib import HuskyLensLibrary
import time

# Initialize HuskyLens using I2C protocol
huskyLens = HuskyLensLibrary("I2C", "", address=0x32)

def pick_up():
    # Replace this with your robot arm's pick-up code
    print("üéØ Learned color detected! Picking up object...")

def main():
    print("üîç Starting in object recognition mode...")
    huskyLens.algorthim("ALGORITHM_OBJECT_RECOGNITION")

    while True:
        objects = huskyLens.blocks()
        if objects:
            print("‚úÖ Object detected! Switching to color recognition.")
            break
        time.sleep(0.1)

    huskyLens.algorthim("ALGORITHM_COLOR_RECOGNITION")
    print("üåà Switched to color recognition mode...")

    while True:
        colors = huskyLens.blocks()
        if colors:
            print("üü• Color block(s) detected.")
            for color in colors:
                if color.learned:
                    pick_up()
                    return  # exit after pickup
                else:
                    print("Color detected but not learned.")
            break
        time.sleep(0.1)

if __name__ == "__main__":
    main()
